                ],
                '社会': [
                    { title: 'じゅうたく', content: '昔の家と今の家の違いや、日本の気候と住居の関係について学びます。' },
                    { title: 'くらしのうつりかわり', content: '昔の道具や人々の生活の様子を学び、現代の暮らしとの違いを考えます。' },
                ],
            },
            '4年生': {
                '算数': [
                    { title: '約数・倍数', content: '約数・倍数の概念を理解し、最小公倍数・最大公約数を求める練習をします。' },
                    { title: '植木算・和差算', content: '文章を正確に読み取り、論理的に式を立てる力を養います。' },
                    { title: '図形の面積', content: '長方形・正方形・三角形の面積公式を理解し、複合図形の面積を求める問題に挑戦します。' },
                    { title: '場合の数', content: '場合の数の基本的な考え方を学び、樹形図などを活用して数え上げられるようにします。' },
                ],
                '国語': [
                    { title: '読解の基本', content: '説明的文章・物語文の読み方を学び、筆者の主張や登場人物の心情を読み取る練習をします。' },
                    { title: '言葉の知識', content: '語彙力を増やすために、慣用句やことわざ、同音異義語などを学習します。' },
                ],
                '理科': [
                    { title: '昆虫と植物', content: '昆虫の体のつくりや植物の成長過程を観察し、まとめます。' },
                    { title: '電気と磁石', content: '基本的な回路の仕組みや、磁石の性質を実験を通じて学びます。' },
                ],
                '社会': [
                    { title: '日本の地理', content: '日本の47都道府県と主要な地形、産業の特徴を学びます。' },
                    { title: '歴史のあゆみ', content: '日本の歴史を旧石器時代から平安時代まで、流れを追って学習します。' },
                ],
            },
            '5年生': {
                '算数': [
                    { title: '割合と比', content: '割合と比の概念を深く理解し、様々な応用問題に対応できるようにします。' },
                    { title: '速さ', content: '「距離＝速さ×時間」の公式を使いこなせるようになり、旅人算や通過算に挑戦します。' },
                    { title: '図形の相似', content: '図形の相似の性質を理解し、相似比を利用して問題を解く練習をします。' },
                    { title: '数列', content: '数列の規則性を見つけ、等差数列や階差数列の問題を解けるようにします。' },
                ],
                '国語': [
                    { title: '複雑な文章読解', content: '複数の登場人物や複雑な論理展開の文章を読み解く力を養います。' },
                    { title: '古典', content: '古文・漢文の基本的な文法や重要語句を学習し、古典に慣れ親しみます。' },
                ],
                '理科': [
                    { title: '水溶液の性質', content: '酸性・アルカリ性など、水溶液の性質を化学式と合わせて学びます。' },
