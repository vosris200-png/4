                ],
                '社会': [
                    { title: '歴史（中世〜近世）', content: '鎌倉時代から江戸時代まで、日本の歴史の重要な出来事を深く学びます。' },
                    { title: '日本の産業', content: '日本の農業・漁業・工業・商業の現状と課題について学習します。' },
                ],
            },
            '6年生': {
                '算数': [
                    { title: '立体図形', content: '立体の体積や表面積、切断の問題など、難度の高い問題に挑戦します。' },
                    { title: '総合演習', content: 'これまでの学習内容を総復習し、入試本番を想定した問題演習を繰り返します。' },
                ],
                '国語': [
                    { title: '記述問題対策', content: '設問の意図を正確に読み取り、論理的で分かりやすい文章を作成する練習をします。' },
                    { title: '入試問題演習', content: '最新の入試問題を解き、出題傾向を分析し、弱点を克服します。' },
                ],
                '理科': [
                    { title: '総合問題演習', content: '生物・化学・物理・地学を横断的に問う問題に取り組み、思考力を鍛えます。' },
                    { title: '実験問題対策', content: '与えられた実験データから考察し、解答を導き出す力を養います。' },
                ],
                '社会': [
                    { title: '政治・経済', content: '日本の政治の仕組みや経済、国際関係について深く学習します。' },
                    { title: '時事問題対策', content: '最近のニュースや社会情勢について知識を整理し、入試に備えます。' },
                ],
            },
        };

        const mainView = document.getElementById('main-view');

        // ビューをレンダリングする関数
        function renderView() {
            mainView.innerHTML = '';
            let content = '';

            // ナビゲーションボタンの作成
            const createBackButton = () => {
                if (state.currentView !== 'grade') {
                    const backButton = document.createElement('button');
                    backButton.className = 'absolute top-6 left-6 text-gray-600 hover:text-gray-800 transition duration-300';
                    backButton.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 15l-3-3m0 0l3-3m-3 3h8M3 12a9 9 0 1118 0 9 9 0 01-18 0z" />
                    </svg>`;
                    backButton.onclick = () => {
                        if (state.currentView === 'subject') {
                            state.currentView = 'grade';
                            state.selectedGrade = null;
                        } else if (state.currentView === 'topicList') {
                            state.currentView = 'subject';
                            state.selectedSubject = null;
                        } else if (state.currentView === 'topicDetail') {
                            state.currentView = 'topicList';
                        }
                        renderView();
                    };
                    return backButton;
                }
                return null;
            };

            // 各ビューのレンダリング
            if (state.currentView === 'grade') {
                content = `
                    <h2 class="text-2xl font-semibold text-center mb-4 text-gray-700">学年を選択してください</h2>
                    <div class="space-y-4">
                        ${Object.keys(curriculumData).map(grade => `
                            <div class="grade-card bg-gray-50 p-4 rounded-lg shadow-sm hover:bg-gray-100 transition duration-300 cursor-pointer text-center" data-grade="${grade}">
                                <span class="text-lg font-medium text-gray-800">${grade}</span>
                            </div>
                        `).join('')}
                    </div>
                `;
            } else if (state.currentView === 'subject') {
                content = `
                    <h2 class="text-2xl font-semibold text-center mb-4 text-gray-700">${state.selectedGrade}の科目</h2>
                    <div class="grid grid-cols-2 gap-4">
                        ${Object.keys(curriculumData[state.selectedGrade]).map(subject => `
                            <div class="subject-card bg-gray-50 p-4 rounded-lg shadow-sm hover:bg-gray-100 transition duration-300 cursor-pointer text-center" data-subject="${subject}">
                                <span class="text-lg font-medium text-gray-800">${subject}</span>
                            </div>
                        `).join('')}
                    </div>
                `;
            } else if (state.currentView === 'topicList') {
                const topics = curriculumData[state.selectedGrade][state.selectedSubject];
                content = `
                    <h2 class="text-2xl font-semibold text-center mb-4 text-gray-700">${state.selectedGrade} ${state.selectedSubject}</h2>
                    <div class="space-y-3">
                        ${topics.map((topic, index) => `
                            <div class="topic-card bg-gray-50 p-4 rounded-lg shadow-sm hover:bg-gray-100 transition duration-300 cursor-pointer" data-topic-index="${index}">
                                <h3 class="text-lg font-medium text-gray-800">${topic.title}</h3>
                            </div>
                        `).join('')}
                    </div>
                `;
            } else if (state.currentView === 'topicDetail') {
                const topics = curriculumData[state.selectedGrade][state.selectedSubject];
                const topic = topics[state.selectedTopicIndex];
                content = `
                    <h2 class="text-2xl font-semibold text-gray-700 mb-4">${topic.title}</h2>
                    <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
                        <p class="text-gray-600">${topic.content}</p>
                    </div>
                    <div class="mt-6 text-sm text-gray-500">
                      <p>※ これはデモ用のカリキュラムです。実際の学習では、さらに詳しい解説や例題が必要です。</p>
                    </div>
                `;
            }

            mainView.innerHTML = content;
            const backBtn = createBackButton();
            if (backBtn) {
                mainView.prepend(backBtn);
            }
            addEventListeners();
        }

        // イベントリスナーを追加する関数
        function addEventListeners() {
            if (state.currentView === 'grade') {
                document.querySelectorAll('.grade-card').forEach(card => {
                    card.onclick = () => {
                        state.selectedGrade = card.dataset.grade;
                        state.currentView = 'subject';
                        renderView();
                    };
                });
            } else if (state.currentView === 'subject') {
                document.querySelectorAll('.subject-card').forEach(card => {
                    card.onclick = () => {
                        state.selectedSubject = card.dataset.subject;
                        state.currentView = 'topicList';
                        renderView();
                    };
                });
            } else if (state.currentView === 'topicList') {
                document.querySelectorAll('.topic-card').forEach(card => {
                    card.onclick = () => {
                        state.selectedTopicIndex = card.dataset.topicIndex;
                        state.currentView = 'topicDetail';
                        renderView();
                    };
                });
            }
        }

        // 初期描画
        document.addEventListener('DOMContentLoaded', renderView);

    </script>
</body>
</html>
